<table>
  <% book.book_comments.each do |book_comment| %>
    <tr>
      <td>
        <%= link_to user_path(book_comment.user) do %>
          <%= attachment_image_tag(book_comment.user, :profile_image, :fill, 50, 50, fallback:'no-image-icon.jpg') %><br>
          <%= book_comment.user.name %>
        <% end %>
      </td>
      <td><%= book_comment.comment %></td>
      <% if book_comment.user_id == current_user.id %>
        <td><%= link_to 'Destroy', book_book_comment_path(book_comment.book_id, book_comment.id), method: :delete, remote: true, class: 'btn btn-danger btn-sm' %></td>
      <% end %>
    </tr>
  <% end %>
</table>
