<div class="container">
  <div class="row">
    <div class="mt-2 ml-auto">
      <%= form_with url: search_path, method: :get, local:true do |f| %>
        <%= f.text_field :keyword %>
        <%= f.select :model, [['User', 'user'], ['Book', 'book']], { include_blank: false } %>
        <%= f.select :method, [['完全一致', 'perfect'],['前方一致', 'forward'],['後方一致', 'back'],['部分一致', 'partial']], { include_blank: false } %>
        <%= f.submit '検索' %>
      <% end %>
    </div>
  </div>
</div>

